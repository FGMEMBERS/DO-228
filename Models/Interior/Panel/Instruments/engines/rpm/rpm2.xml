<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>rpmgauge.ac</path>

  <animation>
    <object-name>RPMBezel</object-name>
    <object-name>RPMFace</object-name>
    <object-name>RPM.needle</object-name>

    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>RPMBezel</object-name>
    <object-name>RPMFace</object-name>
    <object-name>RPM.needle</object-name>
    <object-name>vitre</object-name>
  </animation>

  <!-- working for Compositor -->
  <effect>
    <inherits-from>../../../../Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>

  <animation>
    <type>material</type>
    <object-name>RPMFace</object-name>
    <object-name>RPM.needle</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/luminosite-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.40 </green>
      <blue>  0.30 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>RPM.needle</object-name>
    <property>engines/engine[1]/rpm</property>
    <interpolation>
      <entry><ind>    0 </ind><dep>   0 </dep></entry>
      <entry><ind> 1000 </ind><dep> 106 </dep></entry>
      <entry><ind> 1300 </ind><dep> 138 </dep></entry>
      <entry><ind> 1700 </ind><dep> 232 </dep></entry>
      <entry><ind> 2000 </ind><dep> 311 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>
